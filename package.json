{
	"name": "hello-electron",
	"version": "1.4.5",
	"description": "First Electron Project",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"test": "chcp 65001 && electron .",
		"build": "electron-builder",
		"publish": "electron-builder --publish always"
	},
	"keywords": [
		"node",
		"electron",
		"javascript"
	],
	"author": {
		"name": "S. Shahriar",
		"email": "shadowshahriar@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ShadowShahriar/hello-electron.git"
	},
	"bugs": {
		"url": "https://github.com/ShadowShahriar/hello-electron/issues"
	},
	"homepage": "https://github.com/ShadowShahriar/hello-electron#readme",
	"license": "MIT",
	"devDependencies": {
		"electron": "^31.2.0",
		"electron-builder": "^24.13.3",
		"electron-builder-squirrel-windows": "^24.13.3"
	},
	"dependencies": {
		"@fontsource-variable/quicksand": "^5.0.18",
		"electron-squirrel-startup": "^1.0.1",
		"update-electron-app": "^3.0.0"
	},
	"build": {
		"appId": "com.hello-electron.app",
		"productName": "Hello Electron",
		"artifactName": "${name}-v${version}.${ext}",
		"executableName": "Hello Electron",
		"directories": {
			"buildResources": "build",
			"output": "dist"
		},
		"win": {
			"signAndEditExecutable": false,
			"verifyUpdateCodeSignature": false,
			"forceCodeSigning": false,
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				},
				{
					"target": "zip"
				}
			],
			"publish": [
				{
					"provider": "github",
					"releaseType": "release"
				}
			]
		},
		"nsis": {
			"unicode": true,
			"oneClick": false,
			"perMachine": true,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"removeDefaultUninstallWelcomePage": true,
			"deleteAppDataOnUninstall": true,
			"shortcutName": "Hello Electron",
			"runAfterFinish": true,
			"uninstallDisplayName": "${productName} v${version}",
			"license": "build/license.html"
		},
		"copyright": "Copyright Â© 2024 ${author}",
		"asar": true,
		"asarUnpack": [
			"**/node_modules/@fontsource/**",
			"**/node_modules/@fontsource-variable/**"
		]
	}
}
