{
	"name": "hello-electron",
	"productName": "Hello Electron",
	"version": "1.1.0",
	"description": "First Electron Project",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"test": "chcp 65001 && electron .",
		"start": "electron-forge start",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"publish": "electron-forge publish"
	},
	"keywords": [
		"node",
		"electron",
		"javascript"
	],
	"author": {
		"name": "S. Shahriar",
		"email": "shadowshahriar@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ShadowShahriar/hello-electron.git"
	},
	"bugs": {
		"url": "https://github.com/ShadowShahriar/hello-electron/issues"
	},
	"homepage": "https://github.com/ShadowShahriar/hello-electron#readme",
	"license": "MIT",
	"devDependencies": {
		"@electron-forge/cli": "^7.4.0",
		"@electron-forge/maker-squirrel": "^7.4.0",
		"@electron-forge/maker-zip": "^7.4.0",
		"@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
		"@electron-forge/publisher-github": "^7.4.0",
		"electron": "^31.2.0"
	},
	"dependencies": {
		"@fontsource-variable/quicksand": "^5.0.18",
		"electron-squirrel-startup": "^1.0.1",
		"update-electron-app": "^3.0.0"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"icon": "src/assets/app",
				"ignore": [
					".old",
					"out",
					"coverage"
				],
				"asar": {
					"unpack": [
						"**/node_modules/@fontsource/**/*",
						"**/node_modules/@fontsource-variable/**/*"
					]
				}
			},
			"plugins": [
				{
					"name": "@electron-forge/plugin-auto-unpack-natives",
					"config": {}
				}
			],
			"makers": [
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"win32"
					]
				},
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"authors": "S. Shahriar",
						"description": "First App Installer",
						"setupIcon": "src/assets/app.ico"
					}
				}
			],
			"publishers": [
				{
					"name": "@electron-forge/publisher-github",
					"config": {
						"repository": {
							"owner": "ShadowShahriar",
							"name": "hello-electron"
						}
					},
					"draft": true
				}
			]
		}
	}
}
